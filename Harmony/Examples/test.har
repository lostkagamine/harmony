function get_print(newline) do
	if newline then
		extern System.Console.WriteLine(System.String)
	else
		extern System.Console.Write(System.String)
	end
end

println("get_print(true)")
the = get_print(true)
the("testing")
the("on a new line")

println("get_print(false)")
the = get_print(false)
the("testing again ")
the("on the same line")

println("")